@using dz.SoftwareRequest.ViewModels;
@model RequestViewModel;

<div class="panel panel-success">
    <div class="panel-heading">Infomation</div>
    <div class="panel-body">
        <div class="form-horizontal">
            <input type="hidden" asp-for="Id"/>
            <div class="form-group">
                <label asp-for="DocNo" class="col-md-2 control-label"></label>
                <div class="col-md-2">
                    <input asp-for="DocNo" readonly="readonly" class="form-control"/>
                </div>
                <label asp-for="RequestDate" class="col-md-2 control-label"></label>
                <div class="col-md-2">
                    <input asp-for="RequestDate" readonly="readonly" class="form-control"/>
                </div>            
            </div>
            <div class="form-group">
                <label asp-for="Title" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Title" class="form-control"/>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <textarea rows="6" asp-for="Description" class="form-control"></textarea>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="RequestBy" class="col-md-2 control-label"></label>
                <div class="col-md-2">
                    <input asp-for="RequestBy" readonly="readonly" class="form-control"/>
                </div>
            </div>
        </div>
    </div>
</div>